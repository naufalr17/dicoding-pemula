<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp"
        tools:context=".DetailActivity">

    <ImageView
            android:id="@+id/ivFlower"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:src="@drawable/pictofme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/ivFlower"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Nama :"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/tvNameArray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/ivFlower"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            tools:text="Nama"
            android:textStyle="bold"
    />

    <TextView
            android:id="@+id/tvKingdom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/ivFlower"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvNameArray"
            android:layout_marginTop="15dp"
            android:text="kingdom:"
            android:textStyle="bold"
    />

    <TextView
            android:id="@+id/tvKingdomArray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/ivFlower"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvKingdom"
            tools:text="Kingdom"
    />

    <TextView
            android:id="@+id/tvDivisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/ivFlower"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvKingdomArray"
            android:text="Divisi :"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
    />

    <TextView
            android:id="@+id/tvDivisiArray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/ivFlower"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvDivisi"
            tools:text="Divisi"
    />


    <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivFlower"
            android:layout_marginTop="20dp"
            android:text="Deskripsi :"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/tvDescArray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/ivFlower"

            app:layout_constraintTop_toBottomOf="@id/tvDesc"
            tools:text="Kingdom"
    />


</androidx.constraintlayout.widget.ConstraintLayout>